     This window is where the main activity for viewing inventory items-->
<Page x:Class="WPFPresentationLayer.PoSPages.InventoryItems"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPresentationLayer.PoSPages"
      mc:Ignorable="d" 
      d:DesignHeight="845" d:DesignWidth="1289"
      Title="InventoryItems">
    <Canvas x:Name="canViewInventoryItems" Height="845" Width="1289" Background="AntiqueWhite">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="dgInventoryItems" Grid.Row="0" Width="1280" Grid.ColumnSpan="1" SelectionMode="Single"
                   Padding="0"
                  IsReadOnly="True" CanUserResizeRows="False" FontSize="12" FontWeight="Medium"
                  CanUserResizeColumns="False" CanUserReorderColumns="False" Loaded="Window_Loaded" />
        </Grid>
    </Canvas>
</Page>
