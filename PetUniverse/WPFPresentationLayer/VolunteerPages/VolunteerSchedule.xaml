<Page x:Class="WPFPresentationLayer.VolunteerPages.VolunteerSchedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPFPresentationLayer.VolunteerPages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="50"
               Grid.Row="0">My Volunteer Schedule</Label>
        <TextBox x:Name="txtVolunteerID"
                 Grid.Row="1">1000000</TextBox>
        <Button x:Name="btnSubmit"
                Width="400"
                HorizontalAlignment="Left"
                Grid.Row="2"
                Click="BtnSubmit_Click">View Shifts</Button>
        <Button x:Name="btnAddShift"
                Width="400"
                HorizontalAlignment="Right"
                Grid.Row="2"
                Click="BtnAddShift_Click">Add a shift</Button>
        <DataGrid x:Name="dteShiftList"
                  Grid.Row="3"></DataGrid>
    </Grid>
</Page>
