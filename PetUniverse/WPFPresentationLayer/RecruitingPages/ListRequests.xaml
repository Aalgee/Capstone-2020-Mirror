<Page x:Class="WPFPresentationLayer.RecruitingPages.ListRequests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPresentationLayer.RecruitingPages"
      mc:Ignorable="d" 
      d:DesignHeight="855" d:DesignWidth="1289"
      Title="ListRequests">

    <Grid>
        <TabControl x:Name="tabsetRequests" Grid.Row="2" Width="1289" Height="835">
            <TabItem x:Name="tabViewNewRequests" Header="New" FontSize="18" FontWeight="Bold" Background="#fff8e3">
                <DataGrid x:Name="dgNewRequestList"
                  Margin="5.5,10,20,0"
                  SelectionMode="Single"
                  FontSize="12"
                  FontWeight="Medium"
                  IsReadOnly="True"
                  ColumnWidth="*" 
                  Loaded="dgNewRequestList_Loaded" 
                  AutoGeneratedColumns="dgNewRequestList_AutoGeneratedColumns" 
                  MouseDoubleClick="dgNewRequestList_MouseDoubleClick"/>
            </TabItem>
            <TabItem x:Name="tabViewActiveRequests" Header="Active" FontSize="18" FontWeight="Bold" Background="#fff8e3">
                <DataGrid x:Name="dgActiveRequestList"                  
                  Margin="5.5,10,20,0"
                  SelectionMode="Single"
                  FontSize="12"
                  FontWeight="Medium"
                  IsReadOnly="True" 
                  ColumnWidth="*" Loaded="dgActiveRequestList_Loaded" 
                  AutoGeneratedColumns="dgActiveRequestList_AutoGeneratedColumns" MouseDoubleClick="dgActiveRequestList_MouseDoubleClick"/>
            </TabItem>
            <TabItem x:Name="tabViewCompletedRequests" Header="Done" FontSize="18" FontWeight="Bold" Background="#fff8e3">
                <DataGrid x:Name="dgDoneRequestList"
                  SelectionMode="Single" 
                  Margin="5.5,10,20,0"
                  FontSize="12"
                  FontWeight="Medium"
                  IsReadOnly="True"
                  ColumnWidth="*" Loaded="dgDoneRequestList_Loaded" 
                  AutoGeneratedColumns="dgDoneRequestList_AutoGeneratedColumns" MouseDoubleClick="dgDoneRequestList_MouseDoubleClick"/>
            </TabItem>
        </TabControl>

        <Frame x:Name="frDeptRequestDetails" NavigationUIVisibility="Hidden" Canvas.Top="10"/>
    </Grid>
</Page>
