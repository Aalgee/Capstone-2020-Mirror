<Page x:Class="WPFPresentationLayer.InventoryPages.ShelterInventory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPresentationLayer.InventoryPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShelterInventory">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="260px"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50px"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="50px"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblShelterInvetoryHeader" Grid.Row="0" Grid.Column="1" Content="Shelter Inventory" VerticalAlignment="Center"
               HorizontalAlignment="Center" FontWeight="DemiBold" FontSize="30" FontStyle="Italic"/>
        <Label Grid.Row="0" Grid.Column="2" Content="Search Item Category" VerticalAlignment="Center"
               HorizontalAlignment="Right" FontWeight="DemiBold" FontSize="14"/>
        <TextBox x:Name="txtShelterItemSearch" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center"
                 VerticalContentAlignment="Center" Margin="30 0" TextChanged="TxtShelterItemSearch_TextChanged"></TextBox>
        <Button x:Name="btnAllShelterInventory" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" 
                Padding="20 3" FontSize="18" HorizontalContentAlignment="Center" FontWeight="DemiBold" Click="btnAllShelterInventory_Click">All Shelter Inventory</Button>
        <Button x:Name="btnNeededItems" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" 
                Padding="20 3" FontSize="18" HorizontalContentAlignment="Center" FontWeight="DemiBold" Click="btnNeededItems_Click">Needed Items</Button>
        <DataGrid x:Name="dgViewShelterInventory" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="3" Grid.Column="1" 
                 IsReadOnly="True" SelectionMode="Single" AutoGeneratedColumns="dgViewShelterInventory_AutoGeneratedColumns"
                 Loaded="dgViewShelterInventory_Loaded" MouseDoubleClick="dgViewShelterInventory_MouseDoubleClick" AlternatingRowBackground="Goldenrod"></DataGrid>
        <Button x:Name="btnAddDonation" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right" 
                Padding="15 3" FontSize="18" FontWeight="DemiBold" Click="btnAddDonation_Click">Add Donation</Button>
    </Grid>
</Page>
