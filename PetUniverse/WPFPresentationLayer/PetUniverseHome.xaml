        <Canvas x:Name="canAM" Width="1300" Height="850" Margin="0,16,0,0" Grid.RowSpan="2" Visibility="Hidden" Grid.Column="1">
            <TabControl x:Name="tabsetAM" Grid.Row="2" Width="1289" Height="845" Canvas.Top="10">
                <TabItem x:Name="tabViewAnimals" Header="View Animals" FontSize="18" FontWeight="Bold" Background="#fff8e3">
                    <Frame Source="./AMPages/AnimalControls.xaml"/>
                </TabItem>
                <TabItem x:Name="tabViewKennels" Header="View Location Records" FontSize="18" FontWeight="Bold" Background="#fff8e3">
                    <Frame Source="./AMPages/KennelControls.xaml"/>
                </TabItem>
                <TabItem x:Name="tabViewHandling" Header="View Handling Records" FontSize="18" FontWeight="Bold" Background="#fff8e3">
