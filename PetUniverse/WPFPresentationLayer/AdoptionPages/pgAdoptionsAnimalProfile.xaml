<Page x:Class="WPFPresentationLayer.AdoptionsPages.pgAdoptionsAnimalProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPresentationLayer.AdoptionsPages"
      mc:Ignorable="d" 
      d:DesignHeight="845" d:DesignWidth="1280"
      Title="pgAdoptionsAnimalProfile"
      Background="AliceBlue">


    <Canvas x:Name="canViewAnimalProfileList" Height="800" Width="1200">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="700"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="dgAnimalProfiles" Grid.Row="0" Width="800"  Grid.ColumnSpan="2" SelectionMode="Single" Visibility="Visible"
                   Padding="0"
                  IsReadOnly="True" CanUserResizeRows="False" 
                  CanUserResizeColumns="False" CanUserReorderColumns="False" Loaded="Window_Loaded" MouseDoubleClick="DgAnimals_MouseDoubleClick" AutoGeneratedColumns="DgAnimalProfiles_AutoGeneratedColumns" Margin="200,0">
            </DataGrid>

        </Grid>
        <Canvas Height="800" Width="1200" Visibility="Hidden" x:Name="canUpdateAnimal" Background="AntiqueWhite">
            <Grid Height="800" Width=" 1200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label FontSize="36" VerticalAlignment="Center" Grid.Row="0">Update Animal Profile</Label>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>

                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="430"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!--Animal Description-->
                    <Label x:Name="lblAnimalProfileDescription" Grid.Row="0" Grid.Column="0" 
                           FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Right" Height="40" Margin="0,96,0,97" Width="281">Profile Description:</Label>
                    <TextBox  x:Name="txtAnimalProfileDescription" Grid.Column="1" Background="LightGray" 
                      Margin="74,0,305,0" VerticalContentAlignment="Top" FontSize="16" Grid.Row="0" RenderTransformOrigin="0.5,0.5"/>

                    <!--Animal profile Image-->
                    <Label x:Name="lblAnimalProfileImage" Grid.Row="1" Grid.Column="0" 
                           FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Right" Height="40" Margin="0,96,0,97" Width="281">Profile Image:</Label>
                    <Border x:Name="profileImageBorder" BorderThickness="3" Grid.Row="1" Grid.Column="1" Margin="420,10,122,29" BorderBrush="Black">
                        <Image x:Name="currentPetProfile">

                        </Image>
                    </Border>
                    <Button x:Name="btnLoadProfileImage" Click="BtnLoadProfileImage_Click" Content="Select Image" FontSize="30" Margin="74,74,472,72" Grid.Column="1" Grid.Row="1" RenderTransformOrigin="0.217,-0.255"></Button>

                    <!--Submit-->
                    <Button x:Name="BtnSubmitAnimalUpdate" Grid.Row="2" Grid.Column="0" 
                            Width="230" FontSize="24" Padding="10" Visibility="Visible"
                            VerticalAlignment="Center" HorizontalAlignment="Center" Content="Submit Update" Height="56" Margin="123,131,77,46" Click="BtnSubmitAnimalUpdate_Click"></Button>

                    <!--Cancel-->
                    <Button x:Name="btnCancelUpdate" Grid.Row="3" Grid.Column="1"  
                        Width="170" FontSize="24" Padding="10"
                        VerticalAlignment="Center" HorizontalAlignment="Center" Click="BtnCancelUpdate_Click" Content="Cancel" Height="55" Margin="350 60 350 60"></Button>
                </Grid>
            </Grid>
        </Canvas>
    </Canvas>
</Page>
