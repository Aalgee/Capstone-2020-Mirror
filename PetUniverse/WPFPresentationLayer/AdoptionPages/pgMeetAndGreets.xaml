<Page x:Class="WPFPresentationLayer.AdoptionPages.pgMeetAndGreets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPresentationLayer.AdoptionPages"
      mc:Ignorable="d" 
      d:DesignHeight="845" d:DesignWidth="1280"
      Title="pgMeetAndGreets"
      Background="AliceBlue"
      Loaded="Page_Loaded">
    <Grid>
    <Canvas x:Name="canMeetAndGreetSchedule" Visibility="Hidden">
        <Grid Width="1280" Height="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition Height="650"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Meet and Greet Schedule" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="DemiBold"/>
            <DataGrid x:Name="dgAppointments" Grid.Row="2" Margin="20" IsReadOnly="True" AutoGeneratedColumns="dgAppointments_AutoGeneratedColumns" MouseDoubleClick="dgAppointments_MouseDoubleClick"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnSearch" Margin="20 10" Content="Search"/>
                <Button x:Name="btnSubmit" Grid.Column="1" Margin="20 10" Content="Submit"/>
                <Button x:Name="btnFilter" Grid.Column="5" Margin="20 10" Content="Filter"/>

            </Grid>
            <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnView" Grid.Column="5" Margin="20 10" Content="View"/>

            </Grid>
        </Grid>
    </Canvas>
        <Canvas x:Name="canAppointmentDetails">
            <Grid Width="1280" Height="800">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" x:Name="lblTitle" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="DemiBold"></Label>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="lblAppointmentID" Grid.Row="0" Grid.Column="0" Content="Appointment ID:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblAppointmentTypeID" Grid.Row="1" Grid.Column="0" Content="Appointment Type:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblAppointmentDate" Grid.Row="2" Grid.Column="0" Content="Appointment Date:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblAppointmentTime" Grid.Row="3" Grid.Column="0" Content="Appointment Time:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblDecision" Grid.Row="4" Grid.Column="0" Content="Decision:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblLocationName" Grid.Row="5" Grid.Column="0" Content="Location Name:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblAddress1" Grid.Row="6" Grid.Column="0" Content="Address1:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="lblAddress2" Grid.Row="7" Grid.Column="0" Content="Address2:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label Grid.Row="8" Grid.Column="0" Content="City:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label Grid.Row="9" Grid.Column="0" Content="State:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label Grid.Row="10" Grid.Column="0" Content="Zip:" HorizontalAlignment="Right" VerticalAlignment="Center"/>

                    <Label Grid.Row="0" Grid.Column="2" Content="Customer First Name:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label Grid.Row="1" Grid.Column="2" Content="Customer Last Name:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label Grid.Row="2" Grid.Column="2" Content="Customer Phone Number:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label Grid.Row="3" Grid.Column="2" Content="Customer Email:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label Grid.Row="4" Grid.Column="2" Content="Animal Name:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label Grid.Row="5" Grid.Column="2" Content="Animal Dob:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label Grid.Row="6" Grid.Column="2" Content="Animal Species:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label Grid.Row="7" Grid.Column="2" Content="Animal Breed:" HorizontalAlignment="Right" VerticalAlignment="Center"/>


                    <TextBox x:Name="txtAppointmentID" IsReadOnly="True" Grid.Row="0" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtAppointmentType" IsReadOnly="True"  Grid.Row="1" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <DatePicker x:Name="dpAppointmentDate" IsEnabled="False" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>
                    <TextBox x:Name="txtAppointmentTime" IsReadOnly="True"  Grid.Row="3" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtDecision" IsReadOnly="True"  Grid.Row="4" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtLocationName" IsReadOnly="True"  Grid.Row="5" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtLocationAddress1" IsReadOnly="True"  Grid.Row="6" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtLocationAddress2" IsReadOnly="True"  Grid.Row="7" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtLocationCity" IsReadOnly="True"  Grid.Row="8" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtLocationState" IsReadOnly="True"  Grid.Row="9" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtLocationZip" IsReadOnly="True"  Grid.Row="10" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />

                    <TextBox x:Name="txtCustomerFirstName" IsReadOnly="True"  Grid.Row="0" Grid.Column="3" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtCustomerLastName" IsReadOnly="True"  Grid.Row="1" Grid.Column="3" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtCustomerPhoneNumber" IsReadOnly="True"  Grid.Row="2" Grid.Column="3" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtCustomerEmail" IsReadOnly="True"  Grid.Row="3" Grid.Column="3" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtAnimalName" IsReadOnly="True"  Grid.Row="4" Grid.Column="3" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtAnimalDob" IsReadOnly="True"  Grid.Row="5" Grid.Column="3" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtAnimalSpecies" IsReadOnly="True"  Grid.Row="6" Grid.Column="3" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />
                    <TextBox x:Name="txtAnimalBreed" IsReadOnly="True"  Grid.Row="7" Grid.Column="3" Margin="5" VerticalContentAlignment="Center" Background="LightGoldenrodYellow" />

                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnBack" Grid.Column="0" Content="Back" Margin="30 15" Click="btnBack_Click"/>
                    <Button x:Name="btnNotes" Grid.Column="1" Content="Notes" Margin="30 15"/>
                    <Button x:Name="btnEdit" Grid.Column="3" Content="Edit" Margin="30 15"/>
                    <Button x:Name="btnSave" Grid.Column="4" Content="Save" Margin="30 15"/>
                </Grid>
            </Grid>
        </Canvas>
    </Grid>
</Page>
