             This part of the pages contains a list of eRoles and ways to modify them-->
<Page x:Class="WPFPresentationLayer.PersonnelPages.ViewAllRoles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPresentationLayer.PersonnelPages"
      mc:Ignorable="d" 
      d:DesignHeight="845" d:DesignWidth="1280"
      Title="ViewAllRoles">
    <Grid Width="1280">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition  Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgERoleList" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="3" Grid.Column="0" SelectionMode="Single" IsReadOnly="True" FontSize="12" FontWeight="Medium" ColumnWidth="*" AutoGeneratedColumns="DgERoleList_AutoGeneratedColumns"></DataGrid>

        <Button  x:Name="btnOpenRole" Grid.Column="0" Grid.Row="0" Content="Open Role" Click="BtnOpenERole_Click"></Button>


        <Button  x:Name="btnAddERole"  Grid.Column="1" Grid.Row="0" Content="Add"  Click="BtnAddERole_Click"></Button>
        <Button  x:Name="btnDeleteERole" Grid.Column="2" Grid.Row="0" Content="Delete" Click="BtnDeleteERole_Click"></Button>

        <!-- Name: Chase Schulte
             Date: 2/14/2020
             CHECKED BY: Kaleb Bachert
             
             This part of the pages contains input boxes for creation/update of roles-->
        <Grid x:Name="gridEditERoles" Grid.Row="2" Grid.ColumnSpan="3" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>

                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <Label VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" HorizontalAlignment="center" Grid.RowSpan="2" FontSize="16" Margin="0 0 10 0">Role</Label>
            <Label VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" HorizontalAlignment="center" Margin="0 0 10 0">EDepartment</Label>
            <Label VerticalAlignment="Center" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Left" Margin="0 0 10 0">Active</Label>
            <Label VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" HorizontalAlignment="center" Margin="0 0 10 0">Descritpion</Label>

            <TextBox x:Name="txtERoleID" FontSize="16" Grid.Column="1" VerticalContentAlignment="Center" Margin="10 15 40 15" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2" ></TextBox>
            <TextBox x:Name="txtDescription"  VerticalContentAlignment="Center"  Margin="10 0 40 10" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" ></TextBox>
            <TextBox Grid.Column="1" x:Name="txtEDepartmentID" Padding="10 0" VerticalContentAlignment="Center" Margin="10 5 40 5" Grid.Row="2" Grid.ColumnSpan="2" ></TextBox>
            <CheckBox IsEnabled="False" x:Name="chkActive" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="3" Click="ChkActive_Click"/>

            <Button x:Name="btnBackRole" Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" Width="50" Content="Back" Height="25" Click="BtnBackERole_Click" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="btnNextRole" Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" Content="Next" Width="50" Height="25" Click="BtnNextERole_Click" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="btnSave"  Grid.Row="4" HorizontalAlignment="Center" Width="50" Height="25" Grid.Column="3" Content="Save" Click="BtnSave_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="btnCancel" Grid.Row="4"  HorizontalAlignment="Center" Width="50" Height="25" Grid.Column="0" Content="Cancel" Click="BtnCancel_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Page>
