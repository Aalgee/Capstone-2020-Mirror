                    <Label x:Name="lblAddDepartmentDepartmentName" Grid.Row="5" Grid.Column="5" Grid.ColumnSpan="5" FontSize="18" Content="New Department Name:" VerticalContentAlignment="top" HorizontalContentAlignment="Right"></Label>
                    <TextBox x:Name="txtAddDepartmentDepartmentName" Grid.Row="5" Grid.Column="11" Grid.ColumnSpan="11" VerticalContentAlignment="Center" FontSize="18" Margin="5" BorderBrush="Black" BorderThickness="1"></TextBox>
                    <Label x:Name="lblAddDepartmentDescription" Grid.Row="8" Grid.Column="3" Grid.ColumnSpan="7" FontSize="18" Content="New Department Description:" VerticalContentAlignment="Top" HorizontalContentAlignment="Right"></Label>
                    <TextBox x:Name="txtAddDepartmentDescription" Grid.Row="8" Grid.Column="11" Grid.RowSpan="2" Grid.ColumnSpan="11" FontSize="18" Margin="5" BorderBrush="Black" BorderThickness="1"></TextBox>
                    <Button x:Name="btnAddDepartmentSave" Grid.Row="11" Grid.Column="13" Margin="0 5" Content="Save" FontSize="18" FontWeight="DemiBold" Click="btnAddDepartmentSave_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </Button.Resources></Button>
                    <Button x:Name="btnAddDepartmentCancel" Grid.Row="11" Grid.Column="17" Margin="0 5" Content="Cancel" FontSize="18" FontWeight="DemiBold" Click="btnAddDepartmentCancel_Click">
                        <Button.Resources>
