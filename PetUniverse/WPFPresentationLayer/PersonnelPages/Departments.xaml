                    <DataGrid x:Name="dgDepartment" Height="650" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="21" Grid.RowSpan="11" SelectionMode="Single" Loaded="dgDepartment_Loaded" AutoGeneratedColumns="dgDepartment_AutoGeneratedColumns" ></DataGrid>
                    <Button x:Name="btnEditDepartment" Grid.Column="19" Grid.Row="15" FontSize="18" Margin="0 10" Content="Edit" Click="btnEditDepartment_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="btnAddDepartment" Grid.Column="17" Grid.Row="15" FontSize="18" Margin="0 10" Content="Add" Click="btnAddDepartment_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
