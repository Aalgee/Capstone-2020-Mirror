<Page x:Class="WPFPresentationLayer.AnimalManagementInventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPresentationLayer"
        mc:Ignorable="d"
        Title="AnimalManagementInventory" Height="450" Width="800">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>

            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>





        <Grid Grid.Row="1">




        </Grid>
        <Canvas x:Name="Med" Margin="192,122,103,75" Grid.Row="3" >

            <DataGrid x:Name="MedList" SelectionMode="Single"  Grid.RowSpan="3" IsReadOnly="True"  AutoGeneratedColumns="View_AutoGeneratedColumns" Grid.Row="1" Canvas.Top="-182" Height="auto" Width="auto" >

                <DataGrid.ItemContainerStyle>
                    <Style TargetType="DataGridRow">
                        <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                    </Style>
                </DataGrid.ItemContainerStyle>
            </DataGrid>


            <TextBlock x:Name="Quantity_form" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Quantity:" VerticalAlignment="Top" Height="131" Width="170" Canvas.Top="27"/>
            <Button x:Name="four"  Click="btn4" Content="Complete Order"  Height="34" Width="96" Canvas.Top="163" Canvas.Left="128"/>
            <TextBox HorizontalAlignment="Left" x:Name="Quantity_input" Height="23" TextWrapping="Wrap"  VerticalAlignment="Top" Width="84" Canvas.Top="67" TextChanged="QC"/>
            <TextBlock x:Name="ItemID_" Canvas.Left="384" TextWrapping="Wrap"  Canvas.Top="45" Height="36" Width="111"/>
            <TextBlock x:Name="ItemName_" Canvas.Left="384" TextWrapping="Wrap"  Canvas.Top="86" Height="36" Width="111"/>
            <TextBlock x:Name="Quantity_" Canvas.Left="384" TextWrapping="Wrap"  Canvas.Top="124" Height="36" Width="111"/>
            <Label x:Name="OS" Content="Order Summary" HorizontalContentAlignment="Center" FontWeight="Bold" Canvas.Left="248" Width="213"/>
            <Label x:Name="ID" Content="ItemID Number" FontWeight="Bold" Canvas.Left="248" Height="36" Width="136" Canvas.Top="45"/>
            <Label x:Name="Name" Content="Item Name" FontWeight="Bold" Canvas.Left="248" Height="36" Width="136" Canvas.Top="86" />
            <Label x:Name="Number" Content="Quantity" FontWeight="Bold" Canvas.Left="248" Height="36" Width="136" Canvas.Top="122"/>
            <Label x:Name="Error" HorizontalContentAlignment="Center" Canvas.Top="90" Width="159" Height="34" RenderTransformOrigin="0.632,0.476"/>


        </Canvas>
        <Button Content="Medication" HorizontalAlignment="Left" Margin="110,10,0,0" VerticalAlignment="Top" Width="75" Click="Med_Click" RenderTransformOrigin="0.507,-0.595" Grid.RowSpan="2"/>

    </Grid>

</Page>
